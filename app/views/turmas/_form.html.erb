<%= simple_form_for(@turma) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :nome %>
    <%#= f.association :materia %>
    <%#= f.association :professor %>
    <%= f.association :aulas %>
    <%= f.simple_fields_for :aulas do |aula| %>
        <%= aula.association :materia %>
        <%= aula.association :professor %>
    <% end %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
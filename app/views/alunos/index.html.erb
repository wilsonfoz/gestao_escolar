<h1>Relação de alunos</h1>
<table class="table table-bordered table-striped">
  <tr>
    <th>Nome</th>
    <th>Turma</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alunos.each do |aluno| %>
  <tr>
    <td><%= aluno.nome %></td>
    <td><%= aluno.turma.nome %></td>
    <td><%= link_to 'Exibir', aluno %></td>
    <td><%= link_to 'Alterar', edit_aluno_path(aluno) %></td>
    <td><%= link_to 'Excluir', aluno, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


<h1>Relação de professores</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @professores.each do |professor| %>
    <tr>
      <td><%= professor.nome %></td>
      <td><%= link_to 'Exibir', professor %></td>
      <td><%= link_to 'Alterar', edit_professor_path(professor) %></td>
      <td><%= link_to 'Excluir', professor, confirm: 'Tem certeza?', method: :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Cadastrar professor', new_professor_path %>

<h1>Relação de matérias</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materias.each do |materia| %>
  <tr>
    <td><%= materia.nome %></td>
    <td><%= link_to 'Exibir', materia %></td>
    <td><%= link_to 'Alterar', edit_materia_path(materia) %></td>
    <td><%= link_to 'Excluir', materia, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

